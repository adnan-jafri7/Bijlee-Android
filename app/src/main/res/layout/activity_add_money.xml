<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.tvapplication.tvapp.addMoney">

    <TextView
        android:id="@+id/txtAddMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:ems="1"
        android:layout_below="@id/txtAddMoney"
        android:maxLength="10"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/style_et"
        android:hint="Mobile/Username"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnGetDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:background="#dddddd"
        android:text="Get Details"
        android:visibility="visible" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsername"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/txtAgentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agent Name : "
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/etUsername"
        android:textColor="#3A3A43"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/txtValueAgentName"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsername"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:text="Agent Name Value"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/txtAgentBalance"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtValueAgentName"
        android:text="Agent Balance : "
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#3A3A43"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/txtAgentBalanceValue"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtValueAgentName"
        android:text="Agent Balance Value"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:ems="1"
        android:layout_below="@id/txtAgentBalanceValue"
        android:maxLength="10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/style_et"
        android:hint="Amount"
        android:layout_centerHorizontal="true"/>
    <Button
        android:visibility="invisible"
        android:id="@+id/btnRecharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAmount"
        android:layout_margin="20dp"
        android:text="Recharge"
        android:textColor="#ffffff"
        android:enabled="false"
        android:background="#dddddd"/>
    <Button
        android:visibility="invisible"
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecharge"
        android:layout_margin="20dp"
        android:text="Cancel"
        android:textColor="#ffffff"
        android:background="@drawable/button"/>
    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAmount"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:visibility="invisible"/>

</RelativeLayout>