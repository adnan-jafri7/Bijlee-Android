<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:animateLayoutChanges="true"
    tools:context="app.tvapplication.tvapp.rechargereceipt">
    <ScrollView
        android:visibility="invisible"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="-15dp"
                app:cardBackgroundColor="#4CAF50"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/txtTitleBillSuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:text="Recharge of operator name has been successful."
                    android:layout_below="@id/txtTitle"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"/>
            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_paid2"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/cardView"
                android:text="Recharge Receipt"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtAmountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Rs.000.00"
                android:textColor="#000000"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/txtCharges"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAmountValue"
                android:layout_centerHorizontal="true"
                android:text="Convenience Charges: 1%"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCharges"
                android:layout_centerHorizontal="true"
                android:text="Total: billAmount + 1%"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/txtAgentid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTotal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Agent ID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4A4A51" />
            <TextView
                android:id="@+id/txtNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:text="ad2222"
                android:layout_below="@id/txtAgentid"
                android:layout_marginLeft="21dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:layout_below="@id/txtTotal"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A"/>

            <TextView
                android:id="@+id/txtAccountNoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMobileNo"
                android:layout_marginLeft="247dp"
                android:layout_marginTop="0dp"
                android:text="5181515000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id"
                android:layout_below="@id/txtNameValue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A"/>
            <TextView
                android:id="@+id/txtOrderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:text="2021-07-10"
                android:layout_below="@id/txtOrderId"
                android:layout_marginLeft="21dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtOptRef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference No"
                android:layout_below="@id/txtNameValue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="245dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A"/>

            <TextView
                android:id="@+id/txtOptRefValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOptRef"
                android:layout_marginLeft="247dp"
                android:text="abcdffkjk"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtPaymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOptRefValue"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Payment Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A" />

            <TextView
                android:id="@+id/txtPaymentDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPaymentDate"
                android:layout_marginLeft="21dp"
                android:autoSizeTextType="uniform"
                android:ems="5"
                android:text="2021-07-10 12:55:58"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/txtTid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Id"
                android:layout_below="@id/txtOptRefValue"
                android:layout_marginLeft="245dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="20dp"
                android:textColor="#5E5E6A"/>

            <TextView
                android:id="@+id/txtTidValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTid"

                android:layout_marginTop="1dp"
                android:layout_marginLeft="247dp"
                android:ems="5"
                android:text="JCC20210710121517"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:text="Shop Name"
                android:layout_below="@id/txtTidValue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A"/>
            <TextView
                android:id="@+id/txtShopNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@id/txtShopName"
                android:layout_marginLeft="21dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtShopMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Mobile"
                android:layout_below="@id/txtTidValue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="245dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A"/>

            <TextView
                android:id="@+id/txtShopMobileValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtShopMobile"
                android:layout_marginLeft="247dp"
                android:layout_marginTop="0dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtShopNameValue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#5E5E6A"
                android:textSize="10dp" />
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:animateLayoutChanges="true"
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/txtAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Authenticating Wallet"
            android:textSize="20sp"
            android:textColor="#000000"
           />
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/txtAuth"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/imgCheck1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/check"
            android:layout_toLeftOf="@+id/txtAuth"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_below="@+id/txtAuth"
            android:id="@+id/txtProRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Processing Recharge"
            android:textSize="20sp"
            android:textColor="#dddddd"
            />
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/txtAuth"
            android:layout_below="@+id/txtAuth"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/imgCheck2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/check"
            android:layout_toLeftOf="@+id/txtAuth"
            android:layout_below="@+id/txtAuth"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/statusLayout"
        android:visibility="visible">
        <ImageView
            android:id="@+id/imgSuccess"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="200dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_paid"/>
        <ImageView
            android:id="@+id/imgFailed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="200dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:src="@drawable/failed"/>
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/progressBar3"/>
        <TextView
            android:id="@+id/txtStatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgFailed"
            android:textSize="20sp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textStyle=""
            android:text="Recharge Success. Generating Receipt..."
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtAlert"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please do not press back or close the app."
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btnDone"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Done"/>
    <RelativeLayout
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        android:id="@+id/RlFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CAF50">
        <ImageView
            android:id="@+id/imgPaid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_paid2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recharge Success"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgPaid"
            android:layout_margin="10dp"/>

    </RelativeLayout>


</RelativeLayout>