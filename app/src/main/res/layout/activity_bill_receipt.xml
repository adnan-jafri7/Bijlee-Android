<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:animateLayoutChanges="true"
    tools:context="app.tvapplication.tvapp.bill_receipt">
    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_above="@+id/btnShare"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Bill Payment Receipt"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtTitleBillSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Payment of UPPCL-Urban has been Successful."
        android:layout_below="@id/txtTitle"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#008000"/>

            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitleBillSuccess"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_paid" />

    <TextView
        android:id="@+id/txtAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.000.00"
        android:layout_below="@id/imgCheck"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="40sp"/>
            <TextView
                android:id="@+id/txtCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAmountValue"
                android:layout_centerHorizontal="true"
                android:text="Convenience Charges: 1%"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCharges"
                android:layout_centerHorizontal="true"
                android:text="Total: billAmount + 1%"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@id/txtTotal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#4A4A51"/>
    <TextView
        android:id="@+id/txtNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:text="Adnan Ahmad Jafri so SUhail Ahmad Jafri"
        android:layout_below="@id/txtName"
        android:layout_marginLeft="21dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtAccountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account No"
        android:layout_below="@id/txtTotal"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#5E5E6A"/>

    <TextView
        android:id="@+id/txtAccountNoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAccountNo"
        android:layout_marginLeft="247dp"
        android:layout_marginTop="0dp"
        android:text="5181515000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:layout_below="@id/txtNameValue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#5E5E6A"/>
    <TextView
        android:id="@+id/txtDueDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:text="2021-07-10"
        android:layout_below="@id/txtDueDate"
        android:layout_marginLeft="21dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtBillDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Date"
        android:layout_below="@id/txtNameValue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="245dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#5E5E6A"/>

    <TextView
        android:id="@+id/txtBillDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBillDate"
        android:layout_marginLeft="247dp"
        android:text="2021-07-10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

            <TextView
                android:id="@+id/txtPaymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDueDateValue"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Payment Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5E5E6A" />
    <TextView
        android:id="@+id/txtPaymentDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:text="2021-07-10 12:55:58"
        android:layout_below="@id/txtPaymentDate"
        android:layout_marginLeft="21dp"
        android:autoSizeTextType="uniform"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtTid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Id"
        android:layout_below="@id/txtBillDateValue"
        android:layout_marginLeft="245dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginTop="20dp"
        android:textColor="#5E5E6A"/>

            <TextView
                android:id="@+id/txtTidValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTid"

                android:layout_marginTop="1dp"
                android:layout_marginLeft="247dp"
                android:ems="5"
                android:text="JCC20210710121517"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
        android:id="@+id/txtShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:text="Shop Name"
        android:layout_below="@id/txtTidValue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#5E5E6A"/>
    <TextView
        android:id="@+id/txtShopNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jafri Computer Centre"
        android:layout_below="@id/txtShopName"
        android:layout_marginLeft="21dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtShopMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Mobile"
        android:layout_below="@id/txtTidValue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="245dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#5E5E6A"/>

            <TextView
                android:id="@+id/txtShopMobileValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtShopMobile"
                android:layout_marginLeft="247dp"
                android:layout_marginTop="0dp"
                android:text="8979319339"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtShopNameValue"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="The payment will reflect at biller's end after 2-3 working days. This receipt does not guarantee that your bill has been successfully paid."
                android:textAlignment="center"
                android:textColor="#5E5E6A"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txtNote"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/txtAlert"
                android:layout_below="@+id/imgQR"
                android:textColor="#5E5E6A"
                android:layout_margin="10dp"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="You can verify this receipt by visiting http://bijlee.tk/bijlee/receipt.html or by scanning QR Code."/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/bbps_logo"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtAlert"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:text="Save and Print"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/btnNew"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:drawableTop="@drawable/add"
        android:textColor="#ffffff"
        android:text="New"
        android:textAlignment="center"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="5dp"/>


</RelativeLayout>